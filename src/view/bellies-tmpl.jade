html
head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="Bellies Bangles Website - Version 1.0")
    meta(name="author", content="J. Scott Ellis")

    title #{title}
    link(rel="shortcut icon", href="/img/favicon.ico")

    if locals.isProduction
        link(rel="stylesheet", href="/dist/belliesapp.css")
        script.
            localStorage.set("bellies.debug", "false");
            localStorage.set("bellies.debugExternal", "false");
    else
        link(rel="stylesheet", href="/css/belliesapp.css")
        script(src="/lib/system.js")
        script(src="/config.js")
        script.
            localStorage.set("bellies.debug", "true");
            localStorage.set("bellies.debugExternal", "true");

body(class="header-fixed")
    block content
